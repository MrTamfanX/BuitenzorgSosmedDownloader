<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_parent"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_page_box"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/trash"
				android:layout_width="30dp"
				android:layout_height="match_parent"
				android:paddingLeft="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview1"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic_chevron_left_grey"
					android:scaleType="fitCenter"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/layout1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="#FFFFFF"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/linear_animation1"
					android:layout_width="260dp"
					android:layout_height="260dp"
					android:orientation="horizontal"/>
				<TextView
					android:id="@+id/textview1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Selamat Datang Di"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#2979FF"/>
				<TextView
					android:id="@+id/textview3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Buitenzorg Sosmed Downloader"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#000000"/>
				<TextView
					android:id="@+id/textview4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="10dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Buitenzorg Sosmed Downloader ini adalah sebuah aplikasi yang berguna untuk mendownload foto dan video yang ada di sosial media."
					android:textSize="12sp"
					android:textColor="#757575"/>
				<TextView
					android:id="@+id/textview8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:textSize="12sp"
					android:textColor="#000000"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/layout2"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="#FFFFFF"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/linear_animation2"
					android:layout_width="260dp"
					android:layout_height="260dp"
					android:orientation="horizontal"/>
				<TextView
					android:id="@+id/textview2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Bisa Offline Dan Online"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#2979FF"/>
				<TextView
					android:id="@+id/textview5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Buitenzorg Sosmed Downloader"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#000000"/>
				<TextView
					android:id="@+id/textview6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="16dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Disini anda bisa mendownload dengan keadaan online dan offline tanpa menggunakan banyak kuota."
					android:textSize="12sp"
					android:textColor="#616161"/>
				<TextView
					android:id="@+id/textview7"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:background="#FFFFFF"
					android:gravity="center_horizontal|center_vertical"
					android:text="LANJUT"
					android:textSize="14sp"
					android:textColor="#2962FF"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/base"
				android:layout_width="30dp"
				android:layout_height="match_parent"
				android:paddingRight="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/imageview2"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic_chevron_right_grey"
					android:scaleType="fitCenter"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:translationY="-50.0dp">
			<LinearLayout
				android:id="@+id/linear_dots_box"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/dot1"
					android:layout_width="15dp"
					android:layout_height="10dp"
					android:src="@drawable/ic_brightness_1_grey"
					android:scaleType="fitCenter"/>
				<ImageView
					android:id="@+id/dot2"
					android:layout_width="15dp"
					android:layout_height="10dp"
					android:src="@drawable/ic_panorama_fisheye_grey"
					android:scaleType="fitCenter"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
